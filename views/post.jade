extends layout

block content
  .row
    .small-12.medium-4.large-4.columns.end
      h1
        | #{title}
      blockquote
        | #{content}
    form.small-12.medium-8.large-8.columns(method="POST")
      .row
        .small-12.columns
          label
            | Leave a comment
          textarea.commentBox(placeholder='Post an answer / response', name='answer')
      .row
        .small-3.columns.small-centered
          input.button.postfix(type="submit" value="Post")
  .row
    .small-12.medium-8.large-8.medium-offset-4.columns
      each item in responses
        div.comment
          p
            | #{item.value.text}
          span.posted-date
            |  #{item.date}
